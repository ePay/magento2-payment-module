<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
  <default>
    <payment>
      <epay>
        <active>0</active>
        <model>Epay\Payment\Model\Method\Epay\Payment</model>
        <title>ePay Payment Solutions</title>
        <paymentwindowid>1</paymentwindowid>
        <instantcapture>0</instantcapture>
        <instantinvoice>0</instantinvoice>
        <instantinvoicemail>0</instantinvoicemail>
        <paymentgroup>0</paymentgroup>
        <ownreceipt>0</ownreceipt>
        <addsurchargetopayment>0</addsurchargetopayment>
        <surchargemode>surcharge_order_line</surchargemode>
        <remoteinterface>1</remoteinterface>
        <enableinvoicedata>0</enableinvoicedata>
        <enablemobilepaymentwindow>1</enablemobilepaymentwindow>
        <sendmailorderconfirmation>1</sendmailorderconfirmation>
        <sort_order>1</sort_order>
        <timeout>60</timeout>
        <order_status>processing</order_status>
        <order_status_after_canceled_payment>canceled</order_status_after_canceled_payment>
        <masscaptureinvoicemail>1</masscaptureinvoicemail>
        <roundingmode>round_default</roundingmode>
        <uncancelorderlines>0</uncancelorderlines>
        <group>epay_technology</group>
        <keep_payment_onedit>0</keep_payment_onedit>
      </epay>
    </payment>
  </default>
</config>
